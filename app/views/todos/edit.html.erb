<div class="form">
<%= form_for ([@user,@todo]) do|f| %>
    <%= f.label :title %>
    <%= f.text_field :title , placeholder: "provide a title" %>
    <%= f.label :content %>
    <%= f.text_area :content , placeholder: "add new task" %>
    <%= f.select :priority, [["low",3], ["medium",2] , ["high",1]] %>
  <%= f.submit "save changes" %>
<% end %>
</div>