<h1>Add a new task</h1>
<%= form_for @todo do|f| %>
  <%= f.label :title  %>
  <%= f.text_field :title , placeholder: "provide a title" %>
  <%= f.label :content %>
  <%= f.text_area :content , placeholder: "new task" %>
  <%= render 'shared/error_messages' , object:@todo %>
  <%= f.submit "post" %>
<% end %>